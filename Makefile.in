include "config.mk"
SRC:=$(BASEDIR)/src

OBJECTS:=\
	ccmd_init.o \
	ccmd_free.o \
	ccmd_result.o \
	ccmd_exec.o \
	ccmd_execv.o \
	ccmd_execl.o \
	ccmd_split.o \
	ccmd_join.o \
	ccmd_argv_free.o

INCLUDES:=\
	$(BASEDIR)/include/ccmd.h \
	$(SRC)/ccmd_t.h

%.o: $(SRC)/%.c $(INCLUDES)
	$(CC) -g -c -o $@ -fPIC -I$(SRC) -I$(BASEDIR)/include $(CFLAGS) $<

libccmd.so: $(OBJECTS)
	$(LD) -shared -o $@ $^ -lc $(LDFLAGS)

libccmd.a: $(OBJECTS)
	$(AR) cr $@ $^

ccmd_test: $(BASEDIR)/test/main.c libccmd.a
	$(CC) -g -o $@ \
		$(BASEDIR)/test/main.c -I$(BASEDIR)/include \
		-L. -l:libccmd.a $(CFLAGS)

all: __ALL__

install: __INSTALL__ install_headers

all_static: libccmd.a

all_shared: libccmd.so

check: ccmd_test
	./ccmd_test suite

install_static:
	install -Dm644 libccmd.a $(DESTDIR)/lib/libccmd.a

install_shared:
	install -Dm755 libccmd.so $(DESTDIR)/lib/libccmd.so

install_headers:
	install -Dm644 $(BASEDIR)/include/ccmd.h $(DESTDIR)/include/ccmd.h

uninstall:
	rm -f $(DESTDIR)/include/ccmd.h
	rm -f $(DESTDIR)/lib/libccmd.so
	rm -f $(DESTDIR)/lib/libccmd.a

clean:
	find . -name "*.o" -delete
	find . -name "*.so" -delete
	find . -name "*.a" -delete
	rm -f ccmd_test

.PHONY: all_static all_shared all \
	install install_static install_shared install_headers \
	uninstall clean distclean check
